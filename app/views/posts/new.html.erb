<h1>Create New Post</h1>
<div>
    <%= form_with model: @post, url: user_posts_path(@user) do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
      <%= f.label :text %><br>
      <%= f.text_area :text %><br>
      <%= f.submit %>
    <% end %>
</div>

<%= render '/back' %>